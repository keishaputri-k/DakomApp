<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">
    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poster"
        android:contentDescription="iv" />

    <TextView
        android:id="@+id/tvTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/txt_detail"
        android:textColor="@color/secondary_color"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_poster" />

    <TextView
        android:id="@+id/tvLecturerDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Abu Ya’la Hizbul Majid, Lc"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTitleDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDetail" />

    <TextView
        android:id="@+id/TvQuotaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="20/100"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toEndOf="@+id/tvTitleDetail"
        app:layout_constraintTop_toBottomOf="@+id/iv_poster" />

    <TextView
        android:id="@+id/tvMoreLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="More Detail:"
        android:textColor="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/tvLocationLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/txt_location"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoreLabelDetail" />

    <TextView
        android:id="@+id/tvDateLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/txt_date"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_10sp"
        app:layout_constraintStart_toStartOf="@+id/tvLocationLabelDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationLabelDetail" />

    <TextView
        android:id="@+id/tvTimeLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/txt_time"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_10sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDateLabelDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvDateLabelDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvDateLabelDetail" />

    <TextView
        android:id="@+id/tvCpLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/txt_contact"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/_10sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeLabelDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTimeLabelDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeLabelDetail" />

    <TextView
        android:id="@+id/tvDescLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:text="@string/txt_description"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCpLabelDetail" />

    <TextView
        android:id="@+id/tvDescDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/_50dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:layout_marginTop="4dp"
        android:text="@string/txt_description"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDescLabelDetail"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="@+id/tvDescLabelDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvDescLabelDetail" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_siroh"
        android:gravity="center"
        android:text="@string/txt_siroh"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvLecturerDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvLecturerDetail" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_offline"
        android:gravity="center"
        android:text="@string/txt_offline"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvLecturerDetail"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/tvLocationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl.CHRYSAN VI, MRC, JAKAMULYA.BEKASI SELATAN"
        android:textSize="@dimen/_10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLocationLabelDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/tvLocationLabelDetail"
        app:layout_constraintTop_toTopOf="@+id/tvLocationLabelDetail" />

    <TextView
        android:id="@+id/tvDateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Saturday, 15 Januari 2022"
        android:textSize="@dimen/_10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDateLabelDetail"
        app:layout_constraintStart_toEndOf="@+id/tvDateLabelDetail"
        app:layout_constraintTop_toTopOf="@+id/tvDateLabelDetail" />

    <TextView
        android:id="@+id/tvTimeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=" Ba’da Maghrib - Selesai"
        android:textSize="@dimen/_10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeLabelDetail"
        app:layout_constraintStart_toEndOf="@+id/tvTimeLabelDetail"
        app:layout_constraintTop_toTopOf="@+id/tvTimeLabelDetail" />

    <TextView
        android:id="@+id/tvCpDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=" 0811- 108-0690 | 0911-951-2828"
        android:textSize="@dimen/_10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCpLabelDetail"
        app:layout_constraintStart_toEndOf="@+id/tvCpLabelDetail"
        app:layout_constraintTop_toTopOf="@+id/tvCpLabelDetail" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBottomDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background_bottom_button"
        android:layout_marginTop="@dimen/_20dp"
        app:cardElevation="@dimen/_40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/_20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnJoinGroupDetail"
                android:layout_width="@dimen/_110dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:layout_marginStart="@dimen/_20dp"
                android:text="@string/txt_join_group" />
            <Button
                android:id="@+id/btnRegisterNowDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:text="@string/txt_register_now"
                android:backgroundTint="@color/secondary_color"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>